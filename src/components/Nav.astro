---
const { current = '' } = Astro.props;
---

<style>
  nav {
    align-items: center;
    display: flex;
    flex: 1;
    font-family: var(--font-family-sans);
    font-weight: 800;
    justify-content: flex-end;
    width: 100%;
  }

  @media (max-width: 600px) {
    nav {
      display: flex;
      justify-content: center;
    }
    a {
      display: flex;
    }
  }

  a {
    color: inherit;
    text-decoration: none;
    padding: 10px 5px;
    display: block;
    position: relative;
    margin-left: 10px;
    margin-right: 10px;
    min-width: 70px;
    text-align: center;
  }

  a::before {
    content: '';
    position: absolute;
    transition: transform .5s ease;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 2px;
    background: var(--text-secondary);
    transform: scaleX(0);
  }

  a:hover::before,
  .selected::before {
    transform: scaleX(1);

  }
  .selected::before {
    background: var(--primary-color);
  }
</style>

<nav>
  <a class={current === "" ? "selected" : ""} href='/'>Home</a>
  <a class={current === "about" ? "selected" : ""} href='/about'>About</a>
  <a class={current === "blog" ? "selected" : ""} href='/blog'>Blog</a>
  <a class={current === "tours" ? "selected" : ""} href='/tours'>Tours</a>
</nav>
